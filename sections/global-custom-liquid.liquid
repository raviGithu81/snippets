<section class="{% if section.settings.section_top_spacing_enable %}section-spacing-top{% endif %} {% if section.settings.section_bottom_spacing_enable %}section-spacing-bottom{% endif %} video-with-text" data-section-id="{{ section.id }}" >
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        {{ section.settings.custom_liquid }}
    </div>
</section>    

{% schema %}
{
    "name": "Custom Liquid",
    "settings": [
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "checkbox",
            "id": "fluid_layout",
            "label": "Full Width Layout",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "section_top_spacing_enable",
            "label": "Enable Top Spacing",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "section_bottom_spacing_enable",
            "label": "Enable bottom Spacing",
            "default": false
        },
        {
            "type": "liquid",
            "id": "custom_liquid",
            "label": "Custom Liquid",
            "default": "Liquid code to create advanced customizations - {{ shop.name }}",
            "info": "Add app snippets or other Liquid code to create advanced customizations."
        }
    ],
    "presets": [
        {
            "name": "Custom Liquid",
            "settings": {
                "custom_liquid": "Liquid code to create advanced customizations - {{ shop.name }}"
            }
        }
    ]
}
{% endschema %}
