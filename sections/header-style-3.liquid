{% comment %} Add the below schema on inside the "blocks": []  {% endcomment %}
{
  "type": "megamenu",
  "name": "MegaMenu",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Menu Title",
      "info": "Use Exact string as header"
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Overlay Enabled?",
      "default": true
    },
    {
      "type": "color_background",
      "id": "overlay_bg_color",
      "label": "Overlay Background Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "default": 0.3
    },
    {
      "type": "select",
      "id": "banner_style",
      "label": "You can choose the banner display styles",
      "options": [
        {
          "value": "banner_style_1",
          "label": "Banner display style 1"
        },
        {
          "value": "banner_style_2",
          "label": "Banner display style 2"
        },
        {
          "value": "banner_style_3",
          "label": "Banner display style 3"
        }
      ],
      "default": "banner_style_1"
    },
    {
      "type": "header",
      "content": "Collection/Blog/Product/Banner with text section"
    },
    {
      "type": "paragraph",
      "content": "Block 1"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image",
      "info": "Use 480x400 sized image for Banner display style 1 & Banner display style 2. Use 990x475 sized image for Banner display style 3"
    },
    {
      "type": "text",
      "id": "link_text_1",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link_url_1",
      "label": "Link URL"
    },
    {
      "type": "paragraph",
      "content": "Block 2"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image",
      "info": "Use 480x400 sized image for Banner display style 1 & Banner display style 2. Use 990x475 sized image for Banner display style 3"
    },
    {
      "type": "text",
      "id": "link_text_2",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link_url_2",
      "label": "Link URL"
    }
  ]
}

