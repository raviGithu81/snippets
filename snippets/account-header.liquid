{% comment %}
  Sidebar for account pages

  Usage:
  {%- render 'account-header' -%}
{% endcomment %}

<div class="pt-7 pt-lg-10 pb-7 pb-lg-9" style="background-color: #f3f3f3;">
  <div class="container">
      <div class="row">
          <div class="col-sm-8 col-12 mx-auto text-center">
              <h6 class="m-0">{{ settings.welcome_text }}</h6>
              <h1 class="mb-5">{{ 'customer.account.first_name_pretext' | t }}, {{ customer.first_name }}</h1>
              <ul class="d-flex justify-content-center list-unstyled m-0 account_nav">
                <li class="px-3 lh-1 border-end border-gray-500">
                    <a class="fs-md text-capitalize{%- if template.name == 'order' %} fw-bold active{%- endif -%}" href="{{ routes.account_url }}" title="{{ 'customer.orders.title' | t }}" rel="nofollow" aria-label="{{ 'customer.orders.title' | t }}">
                       {{ 'customer.orders.title' | t }}
                    </a>
                </li>
                <li class="px-3 lh-1 border-end border-gray-500">
                    <a class="fs-md text-capitalize{%- if template.name == 'address' %} fw-bold active{%- endif -%}" href="{{ routes.account_addresses_url }}" aria-labelledby="{{ 'customer.account.view_addresses' | t }}" title="{{ 'customer.account.view_addresses' | t }}">
                        {{ 'customer.account.view_addresses' | t }}
                    </a>
                </li>
                <li class="px-3 lh-1">
                    <a class="fs-md text-capitalize" href="{{ routes.account_logout_url }}" aria-labelledby="{{ 'customer.log_out' | t }}" title="{{ 'customer.log_out' | t }}">
                        {{ 'customer.log_out' | t }} 
                    </a>
                </li>
              </ul>
          </div>
      </div>
  </div>
</div>