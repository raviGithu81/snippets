{% comment %}theme-check-disable ParserBlockingJavaScript{% endcomment %}
<script src="{{ 'utility.js' | asset_url }}" ></script>

<script src="{{ 'swiper-slider.js' | asset_url }}"></script>

<script src="{{ 'global.js' | asset_url }}"></script>
{% comment %}theme-check-enable ParserBlockingJavaScript{% endcomment %}

{%- comment -%} Template specific JS {%- endcomment -%}
{%- if template.name == 'collection' -%}
    <script src="{{ 'component-select.js' | asset_url }}" defer></script>   
    <script src="{{ 'component-collection-filters.js' | asset_url }}" defer></script>
{%- elsif template.name == 'product' -%}
    <script data-src="{{ 'imageZoom.js' | asset_url }}" defer></script>
    <script src="{{ 'product-recommendations.js' | asset_url }}" defer></script>
{%- elsif template.name == 'cart' -%}
    <script src="{{ 'template-cart.js' | asset_url }}" defer></script>
{%- elsif template.name == 'search' -%}
    <script src="{{ 'component-select.js' | asset_url }}" defer></script>   
    <script src="{{ 'template-search.js' | asset_url }}" defer></script>
{%- elsif template.name == 'login' or template.name == 'register' -%}
    <script src="{{ 'template-login-register.js' | asset_url }}" defer></script>
{%- elsif template.name == 'addresses' -%}
    <script src="{{ 'template-account-address.js' | asset_url }}" defer></script>
{%- elsif template.name == 'password' -%}
    <script src="{{ 'template-password.js' | asset_url }}" defer></script>
{%- endif -%}

{%- if settings.enable_cart_drawer or template.name == 'cart' -%}
    <script {% unless request.design_mode %}data-{% endunless %}src="{{ 'component-cart-form.js' | asset_url }}" class="lazyload-asset" defer></script>
{%- endif -%}

<script src="{{ 'component-product-form.js' | asset_url }}" defer></script>

<script {% unless request.design_mode %}data-{% endunless %}src="{{ 'components-tabify-accordion.js' | asset_url }}" class="lazyload-asset"  defer></script>

<script {% unless request.design_mode %}data-{% endunless %}src="{{ 'mobile-navigation.js' | asset_url }}" class="lazyload-asset" defer></script>

{% if settings.enable_quickshop %}
    <script {% unless request.design_mode %}data-{% endunless %}src="{{ 'component-quickshop.js' | asset_url }}" class="lazyload-asset" defer></script>
{% endif %}

{%- comment -%} Customization page JS {%- endcomment -%}
{%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer></script>
{%- endif -%}